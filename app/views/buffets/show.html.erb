<% unless company_signed_in? %>
  <div class="container ms-5">
    
    <% if @url.present? %>
      <%= link_to 'Voltar', @url, class: "btn btn-dark me-4" %>
    <% else %>
      <%= link_to 'Voltar', root_path, class: "btn btn-dark me-4" %>
    <% end %>
  </div>
<% end %>

<div class="container d-flex justify-content-center mb-5">

  <div id="buffet-details" class="shadow rounded p-3 mx-3 col-7">
    <div class="container">

      <% if company_signed_in? && current_company.buffet == @buffet %>
        <h2>Informações do Buffet</h2>
        <hr>
        <% unless @buffet.active %>
          <h5 class="text-danger">Este Buffet está desativado</h5>
        <% end %>
        <strong>Fotos:</strong>
        <% if @buffet.cover.present? %>
          <div class="rounded shadow my-3 col-12">
            <%= render 'carroussel' %>
          </div>
        <% end %>
        <p><strong>Nome fantasia: </strong><%= @buffet.company.buffet_name%></p>
        <p><strong>Razão social: </strong><%= @buffet.company_name%></p>
        <p><strong>CNPJ: </strong><%= @buffet.company.company_registration_number%></p>
      <% else %>
        <h2><%= @buffet.company.buffet_name %></h2>
        <hr>
        <strong>Fotos:</strong>
        <% if @buffet.cover.present? %>
          <div class="rounded shadow my-3 col-12">
            <%= render 'carroussel' %>
          </div>
        <% end %>
        <p><strong>CNPJ: </strong><%= @buffet.company.company_registration_number%></p>
      <% end %>
  
      <p><strong>E-mail: </strong><%= @buffet.email%></p>
      <p><strong>Telefone para contato: </strong><%= @buffet.phone_number%></p>
      <p><strong>CEP: </strong><%= @buffet.zip_code%></p>
      <p><strong>Endereço: </strong><%= @buffet.adress%></p>
      <p><strong>Bairro: </strong><%= @buffet.neighborhood%></p>
      <strong>Métodos de pagamento aceitos:</strong>
      <ul id="payments">
        <% @buffet.payment_methods.each do |pm| %>
          <li><%= pm.method %></li>
        <% end %>
      </ul>
      <p><strong>Cidade: </strong><%= @buffet.city%></p>
      <p><strong>Estado: </strong><%= @buffet.state_code%></p>
      <div class="w-75">
        <p><strong>Descrição: </strong><%= @buffet.description%></p>
      </div>
      <% if company_signed_in? && current_company.buffet == @buffet %>
        <div class="d-flex">
          <%= link_to 'Editar informações', edit_buffet_path(@buffet.id), class: "btn btn-outline-dark me-2" %>
          <% if @buffet.active %>
            <%= button_to 'Desativar Buffet', deactivate_buffet_path(@buffet.id), method: :post, class: "btn btn-warning" %>
          <% else %>
            <%= button_to 'Reativar Buffet', activate_buffet_path(@buffet.id), method: :post, class: "btn btn-primary" %>
          <% end %>
        </div>
      <% end %>
      </div>
  </div>

  <div id="events" class="shadow rounded p-3 mx-3 col-4" style="height: 99%;">
    <div class="container text-center">
      
      <% if company_signed_in? && current_company.buffet == @buffet %>
        <h2>Eventos cadastrados</h2>
      <% else %>
        <h2>Eventos disponíveis</h2>
      <% end %>
      
      <hr>
      <% if company_signed_in? && current_company.buffet == @buffet %>
        <div class="container text-center">
          <%= link_to 'Cadastrar evento', new_event_path, class: "btn btn-outline-dark" %>
        </div>
      <% end %>
      <hr>
      <div class="overflow-y-scroll overflow-hidden" style="height:950px">
        <% if @buffet.events.empty? %>
          <p>Não existem eventos cadastrados</p>
        <% else %>
          <div class="row text-center d-flex justify-content-center" id="event">
            <% @buffet.events.each do |event| %>
              <div class="col-10 mb-3 rounded-5 border p-4" id=<%= "event-#{event.id}"%>>
                <%= link_to event.name, event_path(event.id), class: "link-dark", style:"font-size: 20px" %>
                <hr>
                <% if event.event_cover.present? %>
                  <%= image_tag event.event_cover, class: "card-img-top img-fluid rounded-5" %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      
    </div>
  </div>
</div>
