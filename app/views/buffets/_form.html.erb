<div class="d-flex justify-content-center mb-4">
  <div class="container w-50 shadow rounded p-5">
    <% if @buffet.errors.any? %>
      <ul>
        <% @buffet.errors.full_messages.each do |err| %>
          <li><%= err %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_with model: @buffet do |f| %>
      <div>
        <%= f.label :company_name, class: "form-label" %>
        <%= f.text_field :company_name, class: "form-control" %>
      </div>

      <%= f.fields_for :company do |cp| %>
        <div>
          <%= cp.label :buffet_name, class: "form-label" %>
          <%= cp.text_field :buffet_name, class: "form-control" %>
        </div>
        <div>
          <%= cp.label :company_registration_number, class: "form-label" %>
          <%= cp.text_field :company_registration_number, disabled: true, class: "form-control" %>
        </div>
      <% end %>

      <div>
        <%= f.label :email, class: "form-label" %>
        <%= f.text_field :email, class: "form-control" %>
      </div>
      <div>
        <%= f.label :phone_number, class: "form-label" %>
        <%= f.text_field :phone_number, class: "form-control" %>
      </div>
      <div>
        <%= f.label :zip_code, class: "form-label" %>
        <%= f.text_field :zip_code, class: "form-control" %>
      </div>
      <div>
        <%= f.label :adress, class: "form-label" %>
        <%= f.text_field :adress, class: "form-control" %>
      </div>
      <div>
        <%= f.label :neighborhood, class: "form-label" %>
        <%= f.text_field :neighborhood, class: "form-control" %>
      </div>
      <div>
        <%= f.label :city, class: "form-label" %>
        <%= f.text_field :city, class: "form-control" %>
      </div>
      <div>
        <%= f.label :state_code, class: "form-label" %>
        <%= f.text_field :state_code, class: "form-control" %>
      </div>
      <div>
        <p class="form-label">MÃ©todos de pagamento aceitos:</p>
        <%= f.collection_check_boxes :payment_method_ids, PaymentMethod.all, :id, :method, {multiple: true} do |cb|%>
          <div>
            <%= cb.label(class: "form-check-label") %>
            <%= cb.check_box(class: "form-check-control") %>
          </div>
        <% end %>
      </div>
      <div>
        <%= f.label :cover, class: "form-label" %>
        <%= f.file_field :cover, class: "form-control" %>
      </div>
      <div>
        <%= f.label :images, class: "form-label" %>
        <%= f.file_field :images, multiple: true, class: "form-control" %>
      </div>
      <div>
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description, {class: "form-control", rows: "4"} %>
      </div>
      <div class="mt-3">
        <%= f.submit "Enviar", class: "btn btn-outline-dark me-2" %>
        <% if controller.action_name == "edit" %>
          <%= link_to 'Voltar', buffet_path(@buffet.id), class:"btn btn-outline-dark" %>
        <% end %>  
      </div>
    <% end %>
  </div>
</div>
