<div class="d-flex justify-content-center" id="buffets">
  <div class="container">
    <% if @buffets.empty? %>
      <div class="container text-center">
        <p><strong>Nenhum resultado para:</strong> "<%= @query %>"</p>
      </div>
    <% else %>
      <div class="container text-center">
        <p><strong><%= @buffets.count %> resultados para:</strong> "<%= @query %>"</p>
      </div>
      <div class="row mt-4">
        <% @buffets.each_with_index do |buffet, index| %>
          <div class="card m-3" style="width: 18rem;" id=<%="buffet-#{index}"%>>
            
            <% if buffet.cover.present? %>
              <%= image_tag buffet.cover, class:"card-img-top img-fluid" %>
            <% end %>
            
            <div class="card-body">
              <h5 class="card-title"><%= buffet.company.buffet_name %></h5>
              <p class="card-text"><%= "#{buffet.city}, #{buffet.state_code}" %></p>
              <%= link_to 'Ver detalhes', buffet_path(buffet.id, search: 1), class: "btn btn-dark" %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


