
<div class="container-fluid ms-5">
  <%= link_to 'Voltar', buffet_path(@buffet.id), class: "btn btn-dark" %>
</div>
<div class="d-flex justify-content-center" id="ratings">
  <div class="container">
     <div class="row mt-4">
      <% @buffet.ratings.each do |rating| %>

        <div class="card m-3 box" style="width: 18rem;">
          
          <% if rating.image.present? %>
            <%= image_tag rating.image, class:"card-img-top img-fluid" %>
          <% end %>
          
          <div class="card-body">
            <h5 class="card-title"><%= rating.value %>/5</h5>
            <i>Por: <%= rating.client.full_name %></i>
            <p class="card-text"><%= rating.feedback %></p>
          </div>
        </div>
        
      <% end %>
    </div>

  </div>
</div>
